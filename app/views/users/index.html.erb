<div class="jumbotron">
  <h1 class="display-4">
    <%= link_to 'Addressy', root_path %>
  </h1>
  <p class="lead">This is a simple address viewer.</p>
</div>

<%= search_form_for @q, url: root_path, class: 'form-inline px-5' do |f| %>
  <%= f.search_field :name_start, placeholder: 'name is started by', autocomplete: 'off', class: 'form-control mr-sm-2' %>
  <%= f.search_field :email_start, placeholder: 'email is started by', autocomplete: 'off', class: 'form-control mr-sm-2' %>
  <%= f.search_field :address_cont, placeholder: 'address contain', autocomplete: 'off', class: 'form-control mr-sm-2' %>
  <%= f.submit "search", class: 'btn btn-outline-success my-2 my-sm-0' %>
<% end %>
<div class="px-5">
  <%= page_entries_info @users %>
  <%= paginate @users %>
</div>

<table class="table">
  <thead>
  <tr>
    <%= content_tag :th, sort_link(@q, :name) %>
    <%= content_tag :th, sort_link(@q, :email) %>
    <%= content_tag :th, sort_link(@q, :address) %>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <%= render 'table_row', user: user %>
  <% end %>
  </tbody>
</table>
<%= paginate @users %>
